@model MvcSEDOC.Models.cuestionario

@{
    ViewBag.Title = "Crear Tipo De Cuestionario";
}

@section MenuSection
{
    @Html.Partial("_MenuAdminFacPartial")
}

<h2>Crear Tipo De Cuestionario</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="accepted">@ViewBag.Message</div>
    <meta http-equiv="Refresh" content="1; url=@Url.Action("UpdateQuestionnaire", "AdminFac")" /> 
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    
    $(function () {
        $("#back-btn")
			.button()
			.click(function () {
			    window.location = "@Url.Action("Index")";
			});       
    });
    
</script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
 
       <fieldset>
        <table>
            <tr>
                <td>
                <div class="editor-label">
                    Ingrese el tipo de cuestionario:
                </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.tipocuestionario)
                        @Html.ValidationMessageFor(model => model.tipocuestionario)
                    </div>
                </td>
            </tr>
        </table>

        <br />
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<a class="miga" href="@Url.Action("Index","AdminFac")"> Volver a Inicio </a>
