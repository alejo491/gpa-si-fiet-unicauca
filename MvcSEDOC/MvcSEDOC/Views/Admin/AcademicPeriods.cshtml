@model IEnumerable<MvcSEDOC.Models.periodo_academico>
           
@{
    ViewBag.Title = "Periodos Academicos";
}

@section MenuSection
{
    @Html.Partial("_MenuAdminPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/admin-AcademicPeriods.js")" type="text/javascript"></script>
}

<h2>Gestión de Periodos Académicos</h2>

<table style="width:100%">
    <tr>
        <td>
            <div class="ui-widget">
	            <div id="work-area" style="min-height: 200px; width: 100%; padding:5px;" class="ui-widget-content">
                    <table class="list" style="width:100%;" >
                        <thead>
                            <tr>
                                <th>Año</th>
                                <th>Periodo</th>
                                <th style="width:130px;">Acci&oacute;n</th>
                            </tr>
                        </thead>
                        <tbody id="datostabla">
                        @foreach (var item in Model) {
                            <tr id="fila@(item.idperiodo)">
                                <td id="lblAnioPer@(item.idperiodo)">@item.anio</td>
                                <td id="lblNumPer@(item.idperiodo)">@item.numeroperiodo</td>
                                <td>
                                    <a href='#' class='edit' id='btnEdit@(item.idperiodo)' idperiodo='@(item.idperiodo)'>Editar</a> |
                                    <a href='#' class='delete' id='btnDel@(item.idperiodo)' idperiodo='@(item.idperiodo)'>Eliminar</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>

                </div>
                <a href='#' class='add' id='btnAdd'>Agregar</a><br/>
            </div>
        </td>
    </tr>
</table>

<a class="miga" href="@Url.Action("Index","Admin")"> Volver a Inicio </a>

<div id="dialogEditAcademicPeriod" title="Editar Periodo Académico">
        <fieldset>
            <table width="100%">
                <tr>
                <td width="60px" >Año</td>
                 <td>
                     <div class="editor-field">
                        <input type="text" id="editanio" name="editanio" style="width:100px" maxlength="4" /><br />
                     </div>
                 </td>
               </tr>
               <tr>
                <td>Periodo</td>
                 <td>
                     <div class="editor-field">
                        <input type="text" id="editperiodo" name="editperiodo" style="width:100px" maxlength="1" /><br />
                     </div>
                 </td>
               </tr>
               <tr>
                <td colspan="2">
                <input type="hidden" name="idperiod" id="idperiod" />
                <span id="validedit" class="field-validation-valid"></span>
                </td>
               </tr>
            </table>
        </fieldset>
</div>

<div id="dialogDeleteAcademicPeriodConfirm" title="Eliminar el Periodo Académico?">
	<p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Esta seguro que desea eliminar este periodo académico de forma permanente?</p>
    <input type="hidden" name="delidperiod" id="delidperiod" />
    <p><br /></p>
    <small style="font-size:smaller;">Si el periodo tiene datos asociados no se podra eliminar</small>
</div>

<div id="dialogCreateAcademicPeriod" title="Crear Periodo Académico">
        <fieldset>
            <table>
                <tr>
                <td width="60px">Año</td>
                 <td>
                     <div class="editor-field">
                        <input type="text" id="createanio" name="anio" style="width:100px" maxlength="4" /><br />
                     </div>
                 </td>
               </tr>
               <tr>
                <td>Periodo</td>
                 <td>
                     <div class="editor-field">
                        <input type="text" id="createperiodo" name="periodo" style="width:100px" maxlength="1" /><br />
                     </div>
                 </td>
               </tr>
               <tr>
                <td colspan="2"><span id="validcreate" class="field-validation-valid"></span></td>
               </tr>
            </table>
        </fieldset>
</div>
