@model MvcSEDOC.Models.departamento

@{
    ViewBag.Title = "Lista De Programas";
}

@section MenuSection
{
    @Html.Partial("_MenuAdminPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/admin-ListProgramas.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<h2>Lista De Programas</h2>

<table style="width:100%;">
    <tr>
        <td>
        <div class="ui-widget">
	        <label for="search_facultad">Buscar Facultad: </label>	       
            <select name="facultades" id="facultades" onchange="loadTable(this.value)">
                <option value="0">Seleccione La Facultad</option>
                @foreach (var item in ViewBag.facultades)
                {
                    <option id="fac@(item.idfacultad)" value="@item.idfacultad" facname = "@item.fac_nombre">@item.fac_nombre</option>
                }
            </select> 
        </div>
        </td>        
    </tr>
    
    <tr>
     <td><div class="ui-widget">
          <div id ="work-area" style="min-height: 200px; width: 100%; padding:5px;" class="ui-widget-content"> </div>
          </div>
     </td>
    </tr>
    
</table>

<a class="miga" href="@Url.Action("Index","Admin")"> Volver a Inicio </a>