@model  MvcSEDOC.Models.departamento
@{
    ViewBag.Title = "Asignar Privilegios";
}

@section MenuSection
{
    @Html.Partial("_MenuAdminFacPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/adminfac-SetPrivileges.js")" type="text/javascript"></script>
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="errorEd">@ViewBag.Error</div>    
}
else
{

<h2>Asignar Privilegios</h2>

<table style="width:100%">
    <tr>
        <td>
        <div class="ui-widget">
	        <label for="search_department">Buscar docentes del departamento: </label>	        
            <select name="departamentos" id="departamentos" onchange="loadTable(this.value)">
                <option value="0">Seleccione Departamento</option>
                @foreach (var item in ViewBag.departamentos)
                {
                    <option id="dep@(item.iddepartamento)" value="@item.iddepartamento" depname = "@item.nombre">@item.nombre</option>
                }
            </select> 
        </div>
        </td>
        
    </tr>  
    <tr>
     <td><div class="ui-widget">
          <div id ="work-area" style="min-height: 200px; width: 100%; padding:5px;" class="ui-widget-content"> </div>
          </div>
     </td>
    </tr>
    
</table>

<div id="dialogUpDateDepartmentChief" title="Cambiar Jefe?">
	<p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Esta seguro que desea cambiar el jefe de este departamento?</p>
    <br />
    Establecer por defecto el usuario como jefe de las siguientes labores: 
    <table cellpadding="0" cellspacing="0"><tr>
    <td><input type="checkbox" id="chkDocencia" value="3" />Docencia</td>
    <td><input type="checkbox" id="chkDesarrollo" value="5" />Dllo. Profesoral</td>
    </tr>
    <tr>
    <td><input type="checkbox" id="chkTrabajoGradoInv" value="7" />Trab. Grado Inv.</td>
    <td><input type="checkbox" id="chkTrabajoGrado" value="11" />Trab. Grado</td>
    </tr>
    <tr>
    <td><input type="checkbox" id="chkInvestigacion" value="13" />Investigacion</td>
    <td><input type="checkbox" id="chkGestion" value="17" />Gestión</td>
    </tr>
    <tr>
    <td><input type="checkbox" id="chkSocial" value="19" />Social</td>
    <td><input type="checkbox" id="chkOtras" value="23" />Otros</td>
    </tr>
    </table>
</div>
    
}
<a class="miga" href="@Url.Action("Index","AdminFac")"> Volver a Inicio </a>