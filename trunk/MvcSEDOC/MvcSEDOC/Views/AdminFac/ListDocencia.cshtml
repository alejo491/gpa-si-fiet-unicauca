@model MvcSEDOC.Models.docente

@{
    ViewBag.Title = "Lista De Actividad De Docencia";
}

@section MenuSection
{
    @Html.Partial("_MenuAdminFacPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/adminfac-ListActDocencia.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<h2>Lista De Actividad De Docencia</h2>

<table style="width:100%;">
    <tr>
        <td>
            <div class="ui-widget">
	            <label for="search_facultad">Buscar Facultad: </label>	       
                <select name="facultades" id="facultades" onchange="loadDept(this.value)">
                    <option value="0">Seleccione La Facultad</option>
                    @foreach (var item in ViewBag.facultades)
                    {
                        <option id="fac@(item.idfacultad)" value="@item.idfacultad" facname = "@item.fac_nombre">@item.fac_nombre</option>
                    }
                </select> 
            </div>
        </td>        
    </tr>
    
    <tr>
        <td>
            <div class="ui-widget">
                <label for="search_departamento">Buscar Programa: </label>
                <TextBox>
                    <select name="departamentos" id="DepartamentFrom" onchange="loadTable(this.value)">
                        <option value='0'>Seleccione El Programa</option>
                    </select>
                </TextBox>          
             </div>
        </td>
    </tr>

    <tr>
     <td><div class="ui-widget">
          <div id ="work-area" style="min-height: 200px; width: 100%; padding:5px;" class="ui-widget-content"> </div>
          </div>
     </td>
    </tr>
    
</table>

<a class="miga" href="@Url.Action("Index","AdminFac")"> Volver a Inicio </a>