@model MvcSEDOC.Models.grupo

@{
    ViewBag.Title = "Actualizar Grupos";
}

@section MenuSection
{
    @Html.Partial("_MenuAdminFacPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/adminfac-UpdateGroup.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<h2>Actualizar Grupos</h2>

<table style="width:100%;">
    <tr>
        <td>
        <div class="ui-widget">
	        <label for="search_term">Buscar Cuestionario: </label>
	        <input id="search_term" />
        </div>
        </td>
        
    </tr>
    
    <tr>
     <td><div class="ui-widget">
          <div id ="work-area" style="min-height: 200px; width: 100%; padding:5px;" class="ui-widget-content"> </div>
          </div>
     </td>
    </tr>
    
</table>

<div id="dialogEditGroup" title="Editar Grupo">
    <p class="validateTips">Todos los campos se requieren</p>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
 
        <fieldset>
            <table>
                <tr>
                    <td><div class="editor-label"><strong>Grupo a actualizar:</strong></div></td>
                    <td><div class="editor-field" id="QuestionName"></div></td>
                </tr>
            </table>
            <div class="editor-label">
                Editar el nombre del grupo:
            </div>
            <div class="editor-field">
                @Html.HiddenFor(model=> model.idgrupo)
                @Html.HiddenFor(model => model.idcuestionario)
                @Html.TextBoxFor(model => model.nombre)
                @*    @Html.ValidationMessageFor(model => model.nombre)*@
            </div>
            <div class="editor-label">
                Editar el porcentaje:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.porcentaje)
              @*  @Html.ValidationMessageFor(model => model.porcentaje)*@
                @Html.HiddenFor(model => model.orden)
            </div>
        </fieldset>
    }
 
</div>

<div id="dialogDeleteGroupConfirm" title="Eliminar el grupo?">
	<p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Esta seguro que desea eliminar este grupo de forma permanente?</p>
</div>

<a class="miga" href="@Url.Action("Index","AdminFac")"> Volver a Inicio </a>