@model IEnumerable<MvcSEDOC.Models.cuestionario>

@{
    ViewBag.Title = "Modificar Cuestionario";
}
@section MenuSection
{
    @Html.Partial("_MenuAdminPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/admin-UpdateQuestionnaire.js")" type="text/javascript"></script>
}

<h2>Modificar Cuestionario</h2>


<table class="list" style="width:100%;" >
    <thead>
        <tr>
            <th>Tipo de Cuestionario</th>
            <th style="width:130px;">Acci&oacute;n</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td id="lblEd@(item.idcuestionario)">
            @Html.DisplayFor(modelItem => item.tipocuestionario)
        </td>
        <td>
            <a href='#' class='edit' id='btnEdit@(item.idcuestionario)'>Editar</a> |
            <a href='#' class='delete' id='btnDel@(item.idcuestionario)'>Eliminar</a>
            <script type="text/javascript">setEditAction(@(item.idcuestionario),"@(item.tipocuestionario)")</script>
        </td>
    </tr>
}
    </tbody>
</table>

<div id="dialogEditQuestionnaire" title="Editar Cuestionario">
        <fieldset>
            <table>
                <tr>
                    <td><div class="editor-label"><strong>Tipo Cuestionario:</strong></div></td>
                </tr>
                <tr>
                 <td>
                     <div class="editor-field">
                        <input type="text" id="tipocuestionario" style="width:310px" /><br />
                        <span class="field-validation-valid" id="tipocuestionario" style=" "></span>
                        <input type="hidden" id="idcuestionario" />
                        <span class="dialog_validation_msg"></span>
                     </div>
                 </td>
               </tr>
            </table>
        </fieldset>
</div>

<div id="dialogDeleteQuestionnaireConfirm" title="Eliminar el Cuestionario?">
	<p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Esta seguro que desea eliminar este cuestionario de forma permanente?</p>
</div>

<a class="miga" href="@Url.Action("Index","Admin")"> Volver a Inicio </a>