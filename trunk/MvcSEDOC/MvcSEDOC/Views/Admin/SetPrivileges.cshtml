@using MvcSEDOC.Controllers;
@{
    ViewBag.Title = "Gestionar Privilegios De Docentes";
    string guion = "NC";
    List<MvcSEDOC.Controllers.AdminController.DocenteDepto>  misdatos = ViewBag.datos;
}

@section MenuSection
{
    @Html.Partial("_MenuAdminPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/admin-SetPrivileges.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<h2>Docentes Del Departamento @ViewBag.departamento</h2>

<table style="width:100%"> 
    <tr>
     <td><div class="ui-widget"> 
          <div id ="work-area" style="min-height: 200px; width: 100%; padding:5px;" class="ui-widget-content"> 
                <table class="list" style='width:100%'>
                    <thead> 
                        <tr class='sub'>                            
                            <th align="center" colspan="2">Docente</th>
                            <th align="center" colspan="2">Jefe De Departamento</th>    
                        </tr>
                    </thead>                       
                <tbody> 
                @foreach (var lista in misdatos)
                { 
                    <tr>
                        <td colspan="2">@lista.nombre @lista.apellido</td>
                        <td align='center'> <input type= 'radio' name='group1' id='@lista.iddocente' @lista.jefe onClick='openDialog(@lista.iddocente,@lista.iddetp)' /></td>
                   </tr>
                 }
                 </tbody>             
                    
                </table>                 
            </div>          
          </div>
     </td>
    </tr> 
    <tr>
        <td>@Html.ActionLink("Volver", "ListProgramas", "Admin")</td>        
    </tr>
   
</table> 

<div id="dialogUpDateDepartmentChief" title="Cambiar Jefe?">
	<p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Esta seguro que desea cambiar el jefe de este departamento?</p><br />
    Establecer por defecto el usuario como jefe de las siguientes labores: 
    <table cellpadding="0" cellspacing="0"><tr>
    <td><input type="checkbox" id="chkDocencia" value="3" />Docencia</td>
    <td><input type="checkbox" id="chkDesarrollo" value="5" />Dllo. Profesoral</td>
    </tr>
    <tr>
    <td><input type="checkbox" id="chkTrabajoGradoInv" value="7" />Trab. Grado Inv.</td>
    <td><input type="checkbox" id="chkTrabajoGrado" value="11" />Trab. Grado</td>
    </tr>
    <tr>
    <td><input type="checkbox" id="chkInvestigacion" value="13" />Investigacion</td>
    <td><input type="checkbox" id="chkGestion" value="17" />Gestión</td>
    </tr>
    <tr>
    <td><input type="checkbox" id="chkSocial" value="19" />Social</td>
    <td><input type="checkbox" id="chkOtras" value="23" />Otros</td>
    </tr>
    </table>
</div>


