@model MvcSEDOC.Models.facultad

@{
    ViewBag.Title = "Crear Facultad";
}

@section MenuSection
{
    @Html.Partial("_MenuAdminPartial")
}

@section SpecialJavascriptForView
{
    <script src="@Url.Content("~/Scripts/admin-Facultad.js")" type="text/javascript"></script>
}

<h2>Crear Facultad</h2>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="accepted">@ViewBag.Message</div>
    <meta http-equiv="Refresh" content="1; url=@Url.Action("UpdateFacultad", "Admin")" /> 
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $("#back-btn")
			.button()
			.click(function () {
			    window.location = "@Url.Action("Index")";
			});
    });
</script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
 
       <fieldset>
        <table>
            <tr>
                <td>
                <div class="editor-label">
                    Ingrese el nombre de la facultad:
                </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.fac_nombre)
                        @Html.ValidationMessageFor(model => model.fac_nombre)
                    </div>
                </td>
            </tr>
        </table>

        <br />
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<a class="miga" href="@Url.Action("Index","Admin")"> Volver a Inicio </a>