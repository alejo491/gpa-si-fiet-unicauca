@{
    ViewBag.Title = "Acerca de";
    Layout = "~/Views/Shared/_WorkLayout.cshtml";
}

@if(Request.IsAuthenticated) {
    Response.Redirect(Url.Action("Logout","User"));
}

<h2>SEDOC</h2>
<p>
     El sistema de evaluación docente SEDOC permite gestionar fácilmente las evaluaciones docentes, 
     de acuerdo al rol que el usuario desempeñe algunas de las funciones que puede realizar son:
     <br /><br /><br />
     <li>Gestionar Cuestionarios</li>
     <li>Importar y exportar datos</li>
     <li>Realizar la evaluación de las labores de sus subalternos</li>
     <li>Autoevaluar sus labores</li>
     <li>Consultar evaluaciones actuales y de diferentes periódos académicos</li>
     <li>Gestionar cuestionarios de evaluación</li>   


</p>

@section LoginFormSection
{
    <div class="sidebarheader">Inicio de Sesión</div>
	<div class="content">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
        <div class="error">@ViewBag.Error</div>
        }
		<form method="post" action="@Url.Action("Login","User")">
            <label for="login">Usuario</label><br />
            <input type="text" name="emailinstitucional" value="@(Model!=null ? Model.emailinstitucional : string.Empty)" /><br />
            <label for="password">Contraseña</label><br />
            <input type="password" name="password" /><br />
            <input type="submit" value="Ingresar"/>
        </form>
	</div>
}
